@model BrandDto

<h1>Create Brand</h1>


<form asp-action="Create">
    <div class="col-md-12">
        <label asp-for=Name class="form-label">Brand name</label>
        <input required asp-for=Name type="text" class="form-control" placeholder="Enter brand name">
        <span class="small text-danger" asp-validation-for="Name"></span>
    </div>
    <button type="submit" class="mt-3 btn btn-primary">Submit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
