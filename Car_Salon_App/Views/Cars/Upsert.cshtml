
@model CarDto
@{
    var create = ViewBag.CreateMode;
}

<h1>@(create? "Create" : "Edit") Car</h1>

<form class="row g-3" asp-action="@(create? "Create" : "Edit")">
    <div class="col-md-2">
        <label asp-for=Id class="form-label">Id</label>
        <input readonly asp-for=Id type="text" placeholder="Generated" class="form-control">
    </div>
    <div class="col-md-5">
        <label asp-for=BrandId class="form-label">Brand</label>
        <select asp-for=BrandId asp-items=@ViewBag.Brands class="form-select">
            <option disabled selected>Choose car brand</option>
        </select>
        <span class="small text-danger" asp-validation-for="BrandId"></span>
    </div>
    <div class="col-md-5">
        <label asp-for=CategoryId class="form-label">Category</label>
        <select asp-for=CategoryId asp-items=@ViewBag.Categories class="form-select">
            <option disabled selected>Choose car category</option>
        </select>
        <span class="small text-danger" asp-validation-for="CategoryId"></span>
    </div>
    <div class="col-md-6">
        <label asp-for=Model class="form-label">Model</label>
        <input required asp-for=Model type="text" class="form-control" placeholder="Enter model. Example: Q5, M5,X5">
        <span class="small text-danger" asp-validation-for="Model"></span>
    </div>
    <div class="col-md-6">
        <label asp-for=EngineId class="form-label">Engine</label>
        <select asp-for=EngineId asp-items=@ViewBag.Engines class="form-select">
            <option disabled selected>Choose car engine</option>
        </select>
        <span class="small text-danger" asp-validation-for="EngineId"></span>
    </div>
    <div class="col-12">
        <label asp-for=Year class="form-label">Year</label>
        <input required asp-for=Year type="date" class="form-control">
        <span class="small text-danger" asp-validation-for="Year"></span>
    </div>
    <div class="col-6">
        <label asp-for=Price class="form-label">Price</label>
        <input required asp-for=Price type="number" min="0" step="0.1" class="form-control" placeholder="Enter price">
        <span class="small text-danger" asp-validation-for="Price"></span>
    </div>
    <div class="col-md-3">
        <label asp-for=Discount class="form-label">Discount</label>
        <input required asp-for=Discount type="number" min="0" max="100" class="form-control" placeholder="Enter discount">
        <span class="small text-danger" asp-validation-for="Discount"></span>
    </div>
    <div class="col-md-3">
        <label asp-for=Quantity class="form-label">Quantity</label>
        <input required asp-for=Quantity type="number" min="0" class="form-control" placeholder="Enter quantity">
        <span class="small text-danger" asp-validation-for="Quantity"></span>
    </div>
    <div class="col-md-12">
        <label asp-for=ImageUrl class="form-label">Image URL</label>
        <input asp-for=ImageUrl type="url" class="form-control" placeholder="Enter Image Url">
        <span class="small text-danger" asp-validation-for="ImageUrl"></span>
    </div>
    <div class="form-floating">
        <textarea asp-for=Description class="form-control" placeholder="Enter description"></textarea>
        <label asp-for=Description>Description</label>
        <span class="small text-danger" asp-validation-for="Description"></span>
    </div>


    <div class="col-md-6">
        <a asp-action="Index" class="btn btn-dark w-100">
            <i class="bi bi-caret-left-fill"></i>
            Back
        </a>
    </div>
    <div class="col-md-6">
        <button type="submit" class="btn btn-primary w-100">
            <i class="bi bi-caret-right-fill"></i>
            @(create ? "Create" : "Edit")
        </button>
    </div>
</form>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}
