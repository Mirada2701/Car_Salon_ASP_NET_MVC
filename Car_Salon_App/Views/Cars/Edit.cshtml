@model Car

<h1>Edit Car</h1>

<form class="row g-3" asp-action="Edit">
    <div class="col-2">
        <label asp-for=Id class="form-label">Id</label>
        <input readonly asp-for=Id type="number" class="form-control">
    </div>
    <div class="col-md-5">
        <label asp-for=BrandId class="form-label">Brand</label>
        <select asp-for=BrandId asp-items=@ViewBag.Categories class="form-select">
            <option disabled selected>Choose car brand</option>
        </select>
    </div>
    <div class="col-md-5">
        <label asp-for=CategoryId class="form-label">Category</label>
        <select asp-for=CategoryId asp-items=@ViewBag.Brands class="form-select">
            <option disabled selected>Choose car category</option>
        </select>
    </div>
    <div class="col-md-6">
        <label asp-for=Model class="form-label">Model</label>
        <input required asp-for=Model type="text" class="form-control" placeholder="Enter model. Example: Q5, M5,X5">
    </div>
    <div class="col-md-6">
        <label asp-for=Engine class="form-label">Engine</label>
        <input required asp-for=Engine type="text" class="form-control" placeholder="Enter engine. Example: 2.0 TDI">
    </div>
    <div class="col-12">
        <label asp-for=Year class="form-label">Year</label>
        <input required asp-for=Year type="date" class="form-control">
    </div>
    <div class="col-6">
        <label asp-for=Price class="form-label">Price</label>
        <input required asp-for=Price type="number" min="0" step="0.1" class="form-control" placeholder="Enter price">
    </div>
    <div class="col-md-3">
        <label asp-for=Discount class="form-label">Discount</label>
        <input required asp-for=Discount type="number" min="0" max="100" class="form-control" placeholder="Enter discount">
    </div>
    <div class="col-md-3">
        <label asp-for=Quantity class="form-label">Quantity</label>
        <input required asp-for=Quantity type="number" min="0" class="form-control" placeholder="Enter quantity">
    </div>
    <div class="form-floating">
        <textarea asp-for=Description class="form-control" placeholder="Enter description"></textarea>
        <label asp-for=Description>Description</label>
    </div>


    <div class="col-md-6">
        <a asp-action="Index" class="btn btn-dark w-100">
            <i class="bi bi-caret-left-fill"></i>
            Back
        </a>
    </div>
    <div class="col-md-6">
        <button type="submit" class="btn btn-primary w-100">
            <i class="bi bi-caret-right-fill"></i>
            Edit
        </button>
    </div>
</form>

